{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Flask app",
			"type": "shell",
			"command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
			"args": ["app.py"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Cron: run-all (today)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy","Bypass",
				"-File","${workspaceFolder}\\scripts\\run_cron.ps1"
			],
			"isBackground": false,
			"problemMatcher": []
		}
	]
}